<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_music_detailmusic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C2A3C">

    <RelativeLayout
        android:id="@+id/activity_music_detailabstract_title_rl"
        android:layout_width="match_parent"
        android:layout_height="67px"
        android:background="@drawable/main_title_bg">

        <RelativeLayout
            android:id="@+id/activity_music_detailabstract_back_Rl"
            android:layout_width="67px"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/activity_music_detailabstract_back_imageview"
                android:layout_width="25px"
                android:layout_height="25px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:src="@drawable/back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/activity_music_detailabstract_title_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/main_title_bg"
            android:textSize="24px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_music_detailAbstract_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_music_detailabstract_title_rl">

        <ImageView
            android:id="@+id/activity_music_detailabstract_imageview"
            android:layout_width="203px"
            android:layout_height="287px"
            android:layout_marginLeft="199px"
            android:layout_marginTop="85px"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/activity_music_detailabstract_name_textview"
            android:layout_width="60px"
            android:layout_height="287px"
            android:layout_marginLeft="0px"
            android:layout_marginTop="85px"
            android:layout_toRightOf="@id/activity_music_detailabstract_imageview"
            android:background="@color/textview_bg"
            android:ems="1"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="-5dp"
            android:maxLength="11"
            android:maxLines="11"
            android:paddingBottom="12px"
            android:paddingLeft="18px"
            android:paddingRight="18px"
            android:paddingTop="12px"
            android:textColor="@color/colorWhite"
            android:textSize="24px" />

        <RelativeLayout
            android:layout_width="333px"
            android:layout_height="260px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="99px"
            android:layout_toRightOf="@id/activity_music_detailabstract_name_textview"
            android:background="@drawable/textview_bg">

            <TextView
                android:id="@+id/activity_music_detailabstract_author_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="53px"
                android:textColor="@color/colorWhite"
                android:textSize="16px" />

            <TextView
                android:id="@+id/activity_music_detailabstract_bookname_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="99px"
                android:textColor="@color/colorWhite"
                android:textSize="16px" />

            <TextView
                android:id="@+id/activity_music_detailabstract_region_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="145px"
                android:textColor="@color/colorWhite"
                android:textSize="16px" />

            <TextView
                android:id="@+id/activity_music_detailabstract_difficulty_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="191px"
                android:text="难度："
                android:textColor="@color/white"
                android:textSize="16px" />

            <RatingBar
                android:id="@+id/activity_music_detailabstract_difficulty_ratingBar"
                style="@style/musicdetaibigBarstar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="193px"
                android:layout_toRightOf="@id/activity_music_detailabstract_difficulty_textview"
                android:rating="4.5"
                android:stepSize="0.1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_music_detailabstract_musicinput_rl"
            android:layout_width="196px"
            android:layout_height="116px"
            android:layout_marginLeft="98px"
            android:layout_marginTop="444px"
            android:background="@drawable/textview_bg">

            <ImageView
                android:id="@+id/activity_music_detailabstract_musicinput_imageview"
                android:layout_width="28px"
                android:layout_height="28px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28px"
                android:src="@drawable/musicinput" />

            <TextView
                android:id="@+id/activity_music_detailabstract_musicinput_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="68px"
                android:text="进入曲谱"
                android:textColor="@color/colorWhite"
                android:textSize="16px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_music_detailabstract_handplayer_rl"
            android:layout_width="196px"
            android:layout_height="116px"
            android:layout_marginLeft="15px"
            android:layout_marginTop="444px"
            android:layout_toRightOf="@id/activity_music_detailabstract_musicinput_rl"
            android:background="@drawable/textview_bg">

            <ImageView
                android:id="@+id/activity_music_detailabstract_handplayer_imageview"
                android:layout_width="28px"
                android:layout_height="28px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28px"
                android:src="@drawable/two_hand_player" />

            <TextView
                android:id="@+id/activity_music_detailabstract_handplayer_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="68px"
                android:text="双手模式"
                android:textColor="@color/colorWhite"
                android:textSize="16px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_music_detailabstract_collection_rl"
            android:layout_width="196px"
            android:layout_height="116px"
            android:layout_marginLeft="15px"
            android:layout_marginTop="444px"
            android:layout_toRightOf="@id/activity_music_detailabstract_handplayer_rl"
            android:background="@drawable/textview_bg">

            <ImageView
                android:id="@+id/activity_music_detailabstract_collection_imageview"
                android:layout_width="28px"
                android:layout_height="28px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28px"
                android:src="@drawable/collection_o" />

            <TextView
                android:id="@+id/activity_music_detailabstract_collection_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="68px"
                android:text="收藏"
                android:textColor="@color/colorWhite"
                android:textSize="16px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_music_detailabstract_brief_introduction_rl"
            android:layout_width="196px"
            android:layout_height="116px"
            android:layout_marginLeft="15px"
            android:layout_marginTop="444px"
            android:layout_toRightOf="@id/activity_music_detailabstract_collection_rl"
            android:background="@drawable/textview_bg">

            <ImageView
                android:id="@+id/activity_music_detailabstract_brief_introduction_imageview"
                android:layout_width="28px"
                android:layout_height="28px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28px"
                android:src="@drawable/brief_introduction" />

            <TextView
                android:id="@+id/activity_music_detailabstract_brief_introduction_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="68px"
                android:text="详情介绍"
                android:textColor="@color/colorWhite"
                android:textSize="16px" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/activity_music_detailabstract_related_imageview"
            android:layout_width="212px"
            android:layout_height="40px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="51px"
            android:src="@drawable/related_recommendation" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_music_detailabstract_button_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_music_detailabstract_title_rl"
        android:background="@color/colorWhite"
        android:visibility="gone">

        <ImageView
            android:id="@+id/activity_music_detailabstract_imageview_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="227px"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/activity_music_detailabstract_imageview_loadfault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150px"
            android:src="@drawable/loadfault" />

        <TextView
            android:id="@+id/activity_music_detailabstract_textview_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="448px"
            android:text="加载中 . . . . . ."
            android:textColor="@color/peludeview_bg"
            android:textSize="24px"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/activity_music_detailabstract_imageview_loadfault_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="448px">

            <TextView
                android:id="@+id/activity_music_detailabstract_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击"
                android:textColor="@color/main_title_bg"
                android:textSize="24px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@id/activity_music_detailabstract_button"
                android:text="重新加载"
                android:textColor="@color/ffD100"
                android:textSize="24px" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>