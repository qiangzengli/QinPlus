<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityStartUserLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weiyin.qinplus.activity.StartUserActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="64px"
        android:layout_height="64px"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:background="@drawable/start_break" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80px"
        android:text="个人信息"
        android:textColor="@color/main_title_bg"
        android:textSize="30px" />

    <LinearLayout
        android:layout_width="300px"
        android:layout_height="240px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150px"
        android:background="@drawable/login_edit_shape"
        android:orientation="vertical">

        <EditText
            android:id="@+id/userNameEditText"
            android:layout_width="match_parent"
            android:layout_height="39px"
            android:gravity="center_vertical"
            android:hint="姓名"
            android:paddingLeft="10px"
            android:background="@drawable/start_user_edit_bg"
            android:textColor="@color/color313131"
            android:textColorHint="@color/colorBDBDC3"
            android:textSize="16px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:background="@color/colorWhite" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:background="@color/colorWhite" />

        <TextView
            android:id="@+id/userSexTextView"
            android:layout_width="match_parent"
            android:layout_height="39px"
            android:gravity="center_vertical"
            android:hint="性别"
            android:paddingLeft="10px"
            android:textColor="@color/color313131"
            android:textColorHint="@color/colorBDBDC3"
            android:textSize="16px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:background="@color/colorWhite" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:background="@color/colorWhite" />

        <TextView
            android:id="@+id/userBirthdayTextView"
            android:layout_width="match_parent"
            android:layout_height="39px"
            android:gravity="center_vertical"
            android:hint="生日"
            android:paddingLeft="10px"
            android:textColor="@color/color313131"
            android:textColorHint="@color/colorBDBDC3"
            android:textSize="16px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:background="@color/colorWhite" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:background="@color/colorWhite" />

        <TextView
            android:id="@+id/userCityTextView"
            android:layout_width="match_parent"
            android:layout_height="39px"
            android:gravity="center_vertical"
            android:hint="城市"
            android:paddingLeft="10px"
            android:textColor="@color/color313131"
            android:textColorHint="@color/colorBDBDC3"
            android:textSize="16px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:background="@color/colorWhite" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:background="@color/white" />

        <EditText
            android:id="@+id/userWeiBoEditText"
            android:layout_width="match_parent"
            android:layout_height="39px"
            android:gravity="center_vertical"
            android:hint="微博（选填）"
            android:paddingLeft="10px"
            android:textColor="@color/color313131"
            android:background="@drawable/start_user_edit_bg"
            android:textColorHint="@color/colorBDBDC3"
            android:textSize="16px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:background="@color/colorWhite" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:background="@color/white" />

        <EditText
            android:id="@+id/userEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="39px"
            android:gravity="center_vertical"
            android:hint="邮箱（选填）"
            android:paddingLeft="10px"
            android:textColor="@color/color313131"
            android:textColorHint="@color/colorBDBDC3"
            android:background="@drawable/start_user_edit_bg"
            android:textSize="16px" />
    </LinearLayout>

    <TextView
        android:id="@+id/activityStartLoginSubject"
        android:layout_width="300px"
        android:layout_height="40px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="430px"
        android:background="@drawable/login_text_bg"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/main_title_bg"
        android:textSize="18px" />
</RelativeLayout>
