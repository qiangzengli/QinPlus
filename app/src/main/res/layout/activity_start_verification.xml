<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityStartVerificationLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorF9BF38"
    tools:context="com.weiyin.qinplus.activity.StartVerificationActivity">
    <ImageView
        android:id="@+id/back"
        android:layout_width="64px"
        android:layout_height="64px"
        android:layout_marginTop="20px"
        android:layout_marginLeft="20px"
        android:background="@drawable/start_break"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30px"
        android:layout_marginTop="80px"
        android:layout_centerHorizontal="true"
        android:textColor="@color/main_title_bg"
        android:text="验证手机"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150px"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout3">
        <EditText
            android:id="@+id/activityStartVerificationEdPhone"
            android:layout_width="192px"
            android:layout_height="40px"
            android:background="@drawable/login_edit_shape"
            android:gravity="center_vertical"
            android:hint="@string/login_verification_code"
            android:inputType="number"
            android:paddingLeft="14px"
            android:textSize="16px" />
        <TextView
            android:id="@+id/activityStartVerificationSendCode"
            android:layout_width="100px"
            android:layout_height="40px"
            android:layout_toRightOf="@id/activityStartVerificationEdPhone"
            android:layout_marginLeft="8px"
            android:textSize="16px"
            android:textColor="@color/main_title_bg"
            android:background="@drawable/login_text_bg"
            android:gravity="center"
            android:text="获取验证码" />
    </RelativeLayout>

    <TextView
        android:id="@+id/activityStartLoginSubject"
        android:layout_width="300px"
        android:layout_height="40px"
        android:layout_alignStart="@+id/relativeLayout3"
        android:layout_below="@+id/relativeLayout3"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_subject_bg"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/main_title_bg"
        android:textSize="18px" />
</RelativeLayout>
