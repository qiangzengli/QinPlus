<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/course2LayoutTitleRl"
        layout="@layout/course_content_layout"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/course2LayoutTitleRl"
        android:layout_marginTop="54px"
        >
        <ImageView
            android:id="@+id/course1LayoutImageView"
            android:layout_width="770px"
            android:layout_height="420px"
            android:scaleType="fitCenter"
            />
        <ImageView
            android:id="@+id/course1LayoutPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/video_button"
            />
    </RelativeLayout>
    <include layout="@layout/course_skip_layout"/>
    <RelativeLayout
        android:id="@+id/resultLayout"
        android:layout_width="559px"
        android:layout_height="420px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44px"
        android:layout_below="@id/course2LayoutTitleRl"
        android:background="@color/white"
        android:visibility="gone"
        >
            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                android:id="@+id/videoplayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />
    </RelativeLayout>

</RelativeLayout>