<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="97px"
        android:layout_height="150px"
        android:layout_marginTop="40px"
        android:background="@drawable/relatertextview_bg"
        >
        <TextView
            android:id="@+id/course1TabNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="24px"
            android:textColor="@color/white"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/course1LayoutTitleRl"
        android:layout_width="770px"
        android:layout_height="150px"
        android:layout_marginLeft="127px"
        android:layout_marginRight="127px"
        android:layout_marginTop="40px"
        android:background="@drawable/textview_bg"
        >
        <TextView
            android:id="@+id/course1LayoutTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="10px"
            android:textSize="20px"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/course1LayoutContentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/course1LayoutTitleTextView"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:textSize="16px"
            android:lines="4"
            android:ellipsize="end"
            android:textColor="@color/white"
            />
    </RelativeLayout>


    <com.thinkcool.circletextimageview.CircleTextImageView
        android:id="@+id/course1LayoutAllPractice"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginTop="65px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12px"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:layout_gravity="center"
        app:citv_text_text="@string/all_practice"
        app:citv_text_size="16dp"
        app:citv_text_color="@android:color/white"
        app:citv_fill_color="@color/textview_bg"
        />
</RelativeLayout>