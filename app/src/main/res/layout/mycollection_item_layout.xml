<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mycollection_item_rl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="60px"
    android:layout_marginLeft="64px"
    >
    <ImageView
        android:id="@+id/mycollection_item_imageview"
        android:layout_width="135px"
        android:layout_height="191px"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/mycollection_item_textview"
        android:layout_height="191px"
        android:layout_width="40px"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@id/mycollection_item_imageview"
        android:paddingTop="8px"
        android:paddingLeft="12px"
        android:paddingRight="12px"
        android:paddingBottom="8px"
        android:lineSpacingExtra = "-5dp"
        android:gravity="center_horizontal"
        android:ems = "1"
        android:textSize="16px"
        android:textColor="@color/colorWhite"
        android:maxLines="11"
        android:maxLength = "11"
        android:background="@color/textview_bg"
        android:text="亚麻色头发的少女亚麻色头发的少女"
        />
</RelativeLayout>